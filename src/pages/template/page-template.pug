include ../base/mixins
block head

doctype html
html(lang="ru-RU")
    head
        meta(charset="utf-8")
        title #{title}
        meta(content="width=device-width, initial-scale=1" name="viewport")
        meta(content="ie=edge" http-equiv="x-ua-compatible")

        link(rel="stylesheet" type="text/css" href="css/libreries.css")
        link(rel="stylesheet" type="text/css" href="css/main.css")

        <!--[if lt IE 9]>
        script(src="http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js")
        script(src="http://cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.min.js")
        <![endif]-->

    body
        #preloader
            #loader
        block content

        block js
            script(src="js/libreries.js" defer)
            script(src="js/main.js" defer)